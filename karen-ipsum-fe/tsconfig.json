{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "Node16",
    "lib": ["ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "types": [
      "react",
      "react-dom",
      "vite/client",
      "@stripe/stripe-js"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/settings.js"
  ]
}
