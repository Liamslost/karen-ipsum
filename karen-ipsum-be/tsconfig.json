{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2023", "DOM"],
    "checkJs": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
